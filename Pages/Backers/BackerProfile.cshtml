@page
@model FundRaiser.Pages.Backers.BackerProfileModel
@{
    ViewData["Title"] = "Backer Profile";
}
<form method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Email</label>
        <input asp-for="Backer!.Email" type="email" class="form-control" id="email" size="30" required>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">First Name</label>
        <input asp-for="Backer!.FirstName" type="text" class="form-control" id="firstname" size="30" required>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea2">Last Name</label>
        <input asp-for="Backer!.LastName" type="text" class="form-control" id="lastname" size="30" required>
    </div>

</form>