@page "{id}"
@model FundRaiser.Pages.Projects.Edit
<body class="bg-dark">
    <div class="border container bg-secondary text-white" style="padding:30px;" xmlns="http://www.w3.org/1999/html">
    <form method="post">
        <input type="hidden" asp-for="Project.Id"/>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Title" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4" type>
                <label asp-for="Project.Description"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="Project!.Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.Category"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Category" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.FinancialGoal"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.FinancialGoal" class="f orm-control"/>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input style="margin-top:10%" type="submit" value="Update" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a asp-page="/Projects/Index" style="margin-top:10%;" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
</body>